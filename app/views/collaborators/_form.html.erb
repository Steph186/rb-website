<div class="padding-all">
    <%= simple_form_for(@collaborator) do |f| %>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <div class="form-inputs padding-top">
        <div>
          <%= f.label :first_name %>
          <%= f.text_field :first_name %>
        </div>
        <div>
          <%= f.label :last_name %>
          <%= f.text_field :last_name %>
        </div>
        <div>
          <%= f.label :position %>
          <%= f.select :position, ["PI", "Lab Manager", "Post Doc", "PhD Student", "Research Assistant", "Master Student", "Undergraduate Student"] %>
        </div>

        <div>
          <%= f.label :description_one %>
          <%= f.text_area :description_one %>
        </div>

        <div>
          <%= f.label :description_two %>
          <%= f.text_area :description_two %>
        </div>

        <div>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
        </div>

        <div>
          <%= f.label "Alumni?" %>
          <%= f.select :alumni, [:true, :false] %>
        </div>

        <div class="text-center margin-bottom">
          <div><%= f.submit "Save", class: "btn btn-pink btn-big margin-top" %>
          </div>
        </div>
        <hr class="divider padding-left-right">
        <div class="text-center">
          <%= link_to "Go Back", people_path %>
        </div>
        </div>
    <% end %>
</div>
