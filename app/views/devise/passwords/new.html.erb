<div class="banner-form" style="background-image: linear-gradient(-225deg, rgba(4, 43, 104, 0.7) 30%, rgba(4, 43, 104, 0.5) 50%), url('<%= asset_path('matrix.png') %>'); background-size: cover;background-position: center;">
  <div class="container">
      <div class="col-xs-12 col-md-6 col-md-offset-3 white-box form-box padding-all">
      <h1 class="text-center white-header margin-bottom">Forgot your password?</h1>


        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= f.error_notification %>

            <div class="form-inputs padding-top">
              <div class="col-sm-12">
                <%= f.input :email, required: true, autofocus: true, label: "Enter your email adress" %>
              </div>

              <div class="col-sm-12 text-center margin-bottom">
                <div><%= f.submit "Reset Password", class: "btn-blue btn-big-wide margin-top margin-bottom" %>
                </div>
              </div>

              <div class="text-center">
                <%= link_to "Go Back to Log In", new_user_session_path %>
              </div>

              <hr class="divider padding-left-right">

              <div class="text-center">
                <%= link_to "Return to website", root_path %>
              </div>
            </div>

        <% end %>
      </div>
  </div>
</div>



