<div class="banner-form" style="background-image: linear-gradient(-225deg, rgba(4, 43, 104, 0.7) 30%, rgba(4, 43, 104, 0.5) 50%), url('<%= asset_path('matrix.png') %>'); background-size: cover;background-position: center;">
  <div class="container">
      <div class="col-xs-12 col-md-6 col-md-offset-3 white-box form-box padding-all">
      <h1 class="text-center white-header margin-bottom">Log in</h1>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div class="form-inputs padding-top">
            <div class="col-sm-12">
              <%= f.input :email, required: false, autofocus: true, label: "Your email" %>
            </div>
            <div class="col-sm-12">
              <%= f.input :password, required: false %>
            </div>

            <div class="col-sm-12 text-center margin-bottom">
              <div><%= f.submit "Log In", class: "btn-blue btn-big margin-top margin-bottom" %>
              </div>
            </div>

            <div class="text-center">
              <%= link_to "Forgot your password?", new_password_path(resource_name) %>
            </div>

            <hr class="divider padding-left-right">

            <div class="text-center">
              <%= link_to "Return to website", root_path %>
            </div>
          </div>

        <% end %>
      </div>
  </div>
</div>




