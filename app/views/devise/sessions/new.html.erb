<div class="banner-form" style="background-image: linear-gradient(-225deg, rgba(4, 43, 104, 0.7) 30%, rgba(4, 43, 104, 0.5) 50%), url('<%= asset_path('matrix.png') %>'); background-size: cover;background-position: center;">
  <div class="container">
      <div class="col-xs-12 col-md-6 offset-md-3 white-box form-box padding-all">
      <h1 class="text-center white-header margin-bottom">Log in</h1>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs padding-top">
            <%= f.input :email, required: false, autofocus: true, label: "Your email" %>
            <%= f.input :password, required: false %>
          </div>

          <div class="form-actions padding-left-right">
            <div class="form-button-container">
              <%= f.button :submit, "Log In", class: "btn-blue btn-big" %>
            </div>
            <div class="class padding-top">
              <%= link_to "Forgot your password?", new_password_path(resource_name) %>
            </div>
            <hr class="divider padding-left-right">
            <div>
              <%= link_to "Return to main page", root_path %>
            </div>
          </div>
        <% end %>
      </div>
  </div>
</div>

