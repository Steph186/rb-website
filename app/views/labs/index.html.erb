<div class="banner-pages"
  style="background-image: linear-gradient(-225deg, rgba(4, 43, 104, 0.7) 30%, rgba(4, 43, 104, 0.5) 50%),
         url('<%= cl_image_path Picture.last.photo %>'); background-size: cover; background-position-y: <%= Picture.last.focus_picture %>;">
  <div class="banner-content-pages">
    <h1><strong><%= Picture.last.page %></strong></h1>
  </div>
  <% if current_user && current_user.id == 1 %>
    <p class="edit_picture_icon">
    <%= link_to edit_picture_path(Picture.last) do %><i class="far fa-edit"></i>
      <% end %>
    </p>
  <% end %>
</div>

<div class="container">
  <div class="objects-container margin-bottom-footer">
    <div class="objects-header">
      <h2>Contact information</h2>
      <% if current_user && current_user.id == 1 %>
        <div class="button-container">
          <%= link_to new_lab_path, class: "btn-big btn-pink" do %>
            <i class="fas fa-plus"></i> Add a contact lab
          <% end %>
        </div>
      <% end %>
    </div>

    <% @labs.each do |lab| %>
        <div class="col-xs-12">
          <div class="margin-top-medium">

            <div class="margin-top-medium margin-bottom">

              <% if current_user && current_user.id == 1&& %>
                <%= link_to edit_lab_path(lab), class:"btn-icon" do %><i class="far fa-edit"></i>
                <% end %>

                <%= link_to lab_path(lab), method: :delete, data:{confirm: "Delete this research?"}, class:"btn-icon" do %><i class="far fa-trash-alt"></i>
                <% end %>
              <% end %>
            </div>

              <h2 class="margin-bottom-medium"><%= lab.title %></h2>
          </div>
            <div class="padding-left-right-small">
              <p><i><%= lab.university %></i></p>
              <p class="margin-top"><%= lab.phone %></p>
              <p class="margin-top"><%= lab.adress %></p>
            </div>

        </div>
    <% end %>

    <div class="image-text-container">
      <%= image_tag asset_path('Maso2.JPG'), class:"contact-image margin-top" %>
      <div class="padding-left margin-top">
        <div class="one-block">
          <i class="fas fa-map-marker-alt contact-icon"></i>
          <div class="adress">
            <p> University of Trento</p>
            <p>CIMeC - Mind/Brain Sciences Center</p>
            <p>via delle Regole, 101</p>
            <p>Trento, 38122 - ITALY</p>
          </div>
        </div>
        <br>
        <div class="one-block">
          <i class="fas fa-phone contact-icon"></i>
          <p>0461 282778</p>
        </div>
        <div class="one-block">
          <i class="fas fa-envelope contact-icon"></i>
          <p> &#114;&#111;&#098;&#101;&#114;&#116;&#111;<i id="dot" class="fas fa-circle"></i>&#098;&#111;&#116;&#116;&#105;&#110;&#105;<i class="fas fa-at"></i>&#117;&#110;&#105;&#116;&#110;<i id="dot" class="fas fa-circle"></i>&#105;&#116;</p>
        </div>
      </div>
    </div>
  </div>

  <div
  id="map";
  class="margin-bottom-big";
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
></div>
</div>

