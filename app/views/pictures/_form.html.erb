<div class="padding-all">
    <%= simple_form_for(@picture) do |f| %>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <div class="form-inputs padding-top">
        <div class="col-sm-12">
          <%= f.label "Title of the page" %>
          <%= f.text_field :page %>
        </div>
        <div class="col-sm-12">
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
        </div>

        <div class="col-sm-12">
          <%= f.label "Focus of the picture: between 0% (up) and 100% (down)" %>
          <%= f.text_field :focus_picture %>
        </div>

        <div class="col-sm-12 text-center margin-bottom">
          <div><%= f.submit "Save", class: "btn-blue btn-big-wide margin-top" %>
          </div>
        </div>
        <hr class="divider padding-left-right">
        <div class="text-center">
          <%= link_to "Go Back", root_path %>
        </div>
      </div>
    <% end %>
</div>
