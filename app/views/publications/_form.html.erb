<div id="publication-edit" class="padding-all">
    <%= simple_form_for(@publication) do |f| %>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <div class="form-inputs padding-top">
        <div class="col-sm-12">
          <%= f.label :authors %>
          <%= f.text_field :authors %>
        </div>
        <div class="col-sm-12">
          <%= f.label :title %>
          <%= f.text_field :title %>
        </div>
        <div class="col-sm-12">
          <%= f.input :year, label:"Publication date", as: :string, input_html: { class:"datepicker"} %>
        </div>
        <div class="col-sm-12">
          <%= f.label "Link (needs \"http(s)://\" or link won't work)" %>
          <%= f.text_field :url %>
        </div>
        <div class="col-sm-12">
          <%= f.label :journal %>
          <%= f.text_field :journal %>
        </div>
        <div class="col-sm-12 text-center margin-bottom">
          <div><%= f.submit "Save", class: "btn-blue btn-big-wide margin-top" %>
          </div>
        </div>
        <hr class="divider padding-left-right">
        <div class="text-center">
          <%= link_to "Go Back", publications_path %>
        </div>
      </div>
    <% end %>
</div>

