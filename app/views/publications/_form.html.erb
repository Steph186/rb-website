<div id="publication-edit" class="padding-all">
    <%= simple_form_for(@publication) do |f| %>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <div class="form-inputs padding-top">
        <div>
          <%= f.label :authors %>
          <%= f.text_field :authors %>
        </div>
        <div>
          <%= f.label :title %>
          <%= f.text_field :title %>
        </div>
        <div>
          <%#= f.label :year %>
          <%#= f.text_field :year %>
          <!-- AS STRING required for datepicker in active record! -->
          <%= f.input :year, as: :string, input_html: { class:"datepicker"} %>
        </div>

        <div>
          <%= f.label :journal %>
          <%= f.text_field :journal %>
        </div>

        <div class="text-center margin-bottom">
          <div><%= f.submit "Save", class: "btn btn-blue btn-big margin-top" %>
          </div>
        </div>
        <hr class="divider padding-left-right">
        <div class="text-center">
          <%= link_to "Go Back", publications_path %>
        </div>
      </div>
    <% end %>
</div>

