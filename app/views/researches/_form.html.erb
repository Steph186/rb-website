<div class="padding-all">

    <%= form_for(@research) do |f| %>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <div class="form-inputs padding-top">

        <div class="col-xs-12 col-sm-6">
          <%= f.label :category %>
          <%= f.select :category, ["Research topic", "Funding", "Footer link"] %>
        </div>
        <div class="col-xs-12 col-sm-6">
          <%= f.label :icon %>
          <%= f.select :icon, grouped_options_for_select(@icons_choices, selected_key = @research.icon) %>
        </div>
        <div class="col-sm-12">
          <%= f.label "Topic of research", class:"funding_hide footer_hide" %>
          <%= f.label "Funding name", class:"research_hide footer_hide" %>
          <%= f.label "Link (needs \"http(s)://\" or link won't work)", class:"footer_show" %>
          <%= f.text_field :title %>
        </div>
        <div class="col-sm-12">
          <%= f.label "Description 1", class:"funding_hide footer_hide"  %>
          <%= f.label "Year funded", class:"research_hide footer_hide"  %>
          <%= f.text_area :descr_one, class:"footer_hide" %>
        </div class="col-sm-12">
        <div class="col-sm-12">
          <%= f.label "Description 2", class:"funding_hide footer_hide"  %>
          <%= f.label "Topic + Awarded to", class:"research_hide footer_hide"  %>
          <%= f.text_area :descr_two, class:"footer_hide" %>
        </div>
        <div class="col-sm-12 text-center margin-bottom">
          <div><%= f.submit "Save", class: "btn btn-blue btn-big margin-top" %>
          </div>
        </div>
        <hr class="divider padding-left-right">
        <div class="text-center">
          <%= link_to "Go Back", researches_path %>
        </div>
      </div>
    <% end %>
</div>
