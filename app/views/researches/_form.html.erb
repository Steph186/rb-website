<div class="padding-all">

    <%= form_for(@research) do |f| %>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <div class="form-inputs padding-top">

        <div>
          <%= f.label :category %>
          <%= f.select :category, ["Research topic", "Funding", "Footer link"] %>
        </div>
        <div>
          <%= f.label :title, class:"footer_hide" %>
          <%= f.label "Link", class:"footer_show" %>
          <%= f.text_field :title %>
        </div>
        <div>
          <%= f.label "Description 1 / Year funded", class:"footer_hide"  %>
          <%= f.text_area :descr_one, class:"footer_hide" %>
        </div>
        <div>
          <%= f.label "Description 2 / Topic + Winners", class:"footer_hide"  %>
          <%= f.text_area :descr_two, class:"footer_hide" %>
        </div>

        <div>
          <%= f.label :icon %>
          <%= f.select :icon, ["Book", "Language", "Brain","Research Gate", "Twitter", "GitHub", "Google Scholar", "Slack"]%>
        </div>

        <div class="text-center margin-bottom">
          <div><%= f.submit "Save", class: "btn btn-blue btn-big margin-top" %>
          </div>
        </div>
        <hr class="divider padding-left-right">
        <div class="text-center">
          <%= link_to "Go Back", researches_path %>
        </div>
      </div>
    <% end %>
</div>
