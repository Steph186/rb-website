<div class="padding-all">

    <%= form_for(@research) do |f| %>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <div class="form-inputs padding-top">
        <div>
          <%= f.label :title %>
          <%= f.text_field :title %>
        </div>
        <div>
          <%= f.label "Description 1" %>
          <%= f.text_field :descr_one %>
        </div>
        <div>
          <%= f.label "Description 2" %>
          <%= f.text_field :descr_two %>
        </div>

        <div class="text-center margin-bottom">
          <div><%= f.submit "Save", class: "btn btn-blue btn-big margin-top" %>
          </div>
        </div>
        <hr class="divider padding-left-right">
        <div class="text-center">
          <%= link_to "Go Back", researches_path %>
        </div>
      </div>
    <% end %>
</div>
