<div class="banner-pages"
  style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url('<%= cl_image_path Picture.second.photo %>')">
  <div class="banner-content-pages">
    <h1><strong>Research</strong></h1>
  </div>
  <% if current_user && current_user.id == 1 %>
    <p class="edit_picture_icon">
    <%= link_to edit_picture_path(Picture.second) do %><i class="far fa-edit"></i>
      <% end %>
    </p>
  <% end %>
</div>

<div class="container">
  <div class="objects-container">
    <div class="objects-header">
      <h2>Research</h2>
      <% if current_user && current_user.id == 1 %>
      <div class="button-container">
          <%= link_to new_research_path, class: "btn btn-big btn-blue" do %>
            <i class="fas fa-plus"></i> Add a new research
          <% end %>
      </div>
      <% end %>
    </div>

    <% @researches.each do |research| %>
      <% if research.id.odd? %>
        <div class="one-research margin-top-big">
          <div class="big-icon margin-left-right">
            <%= tag.p("", class: @icons[research.id-1]) %>
          </div>
      <% else %>
        <div class="one-research margin-top-big">
      <% end %>
          <div>
            <div class="object-header">
              <h3><%= research.title %></h3>

              <% if current_user && current_user.id == 1 %>
                <%= link_to edit_research_path(research), class:"btn-icon" do %><i class="far fa-edit"></i>
                <% end %>

                <%= link_to research_path(research), method: :delete, data:{confirm: "Delete this research?"}, class:"btn-icon" do %><i class="far fa-trash-alt"></i>
                <% end %>
              <% end %>
            </div>

            <p><%= research.descr_one %></p>
            <p><%= research.descr_two %></p>
          </div>
          <% if research.id.even? %>
            <div class="big-icon margin-left-right">
              <%= tag.p("", class: @icons[research.id-1]) %>
            </div>
          <% end %>
        </div>
    <% end %>
  </div>
</div>
