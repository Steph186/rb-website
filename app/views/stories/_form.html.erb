<div class="padding-all">
    <%= simple_form_for(@story) do |f| %>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <div class="form-inputs padding-top">
        <div class="col-sm-12">
          <%= f.label :title %>
          <%= f.text_field :title %>
        </div>
        <div class="col-sm-12">
          <%= f.label :content %>
          <%= f.text_area :content %>
        </div>
        <div class="col-xs-12 col-sm-12">
          <%= f.label "Display a picture?" %>
          <%= f.select :display_picture, [:true, :false] %>
        </div>
        <div class="col-sm-12">
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
        </div>

        <div class="col-sm-12 text-center margin-bottom">
          <div><%= f.submit "Save", class: "btn-blue btn-big-wide margin-top" %>
          </div>
        </div>
        <hr class="divider padding-left-right">
        <div class="text-center">
          <%= link_to "Go Back", news_path %>
        </div>
        </div>
    <% end %>
</div>
