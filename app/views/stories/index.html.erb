<div class="banner-pages"
  style="background-image: linear-gradient(-225deg, rgba(4, 43, 104, 0.7) 30%, rgba(4, 43, 104, 0.5) 50%),
         url('<%= cl_image_path Picture.fourth.photo %>'); background-size: cover; background-position-y: <%= Picture.fourth.focus_picture %>;">
  <div class="banner-content-pages">
    <h1><strong><%= Picture.fourth.page %></strong></h1>
  </div>
  <% if current_user %>
    <%= link_to edit_picture_path(Picture.fourth), class: "btn-edit_picture" do %><i class="far fa-edit"></i>
      <% end %>
  <% end %>
</div>

<div class="container">
  <div class="objects-container margin-bottom-footer">

    <div class="objects-header">
      <h2></h2>
      <% if current_user %>
        <div class="button-container">
          <%= link_to new_story_path, class: "btn-big btn-pink" do %>
            <i class="fas fa-plus"></i> Add a news
          <% end %>
        </div>
      <% end %>
    </div>

    <% @stories.each do |story| %>
      <% if story.url.present? %>
        <div class="story-link">
          <%= link_to story.url, target: :_blank do %>
            <%= render 'story', story: story %>
          <% end %>
        </div>

      <% else %>
        <%= render 'story', story: story %>
      <% end %>

      <hr class="divider-stories padding-left-right">
    <% end %>
  </div>
</div>


